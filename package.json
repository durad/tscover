{
  "name": "tscover",
  "version": "0.0.4",
  "description": "Code covrage for TypeScript",
  "bin": {
    "tscover": "bin/tscover.js"
  },
  "files": [
    "bin/",
    "build/"
  ],
  "directories": {
    "test": "tests"
  },
  "types": "build/tscover.d.ts",
  "scripts": {
    "test": "mocha -u tdd --require ts-node/register ./test/test.ts",
    "build-src": "tsc",
    "build-header": "node header/buildheader.js --outDir ./build",
    "build": "npm run build-src && npm run build-header",
    "watch:build-src": "tsc -w --pretty",
    "watch:build-header": "nodemon --watch ./header --ext \"ts,js,less\" --exec \"node header/buildheader.js --outDir ./build\"",
    "watch:build": "concurrently --kill-others --prefix \"[{name}]\" --names \"SRC_,HEAD\" -c \"bgGreen.black,bgBlue.white\" \"npm run watch:build-src\" \"npm run watch:build-header\" "
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/durad/tscover.git"
  },
  "keywords": [
    "code",
    "coverage",
    "typescript",
    "ts"
  ],
  "author": "Dusan Radovanovic",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/durad/tscover/issues"
  },
  "homepage": "https://github.com/durad/tscover#readme",
  "devDependencies": {
    "@types/mocha": "^2.2.44",
    "@types/node": "^8.0.51",
    "concurrently": "^3.5.0",
    "less": "^2.7.2",
    "less-plugin-clean-css": "^1.5.1",
    "ts-node": "^3.3.0",
    "typescript": "^2.3.2",
    "uglify-js": "^3.0.4"
  },
  "dependencies": {
    "global-modules": "^0.2.3"
  }
}
